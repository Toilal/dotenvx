{
  "name": "@toilal/dotx",
  "publishConfig": {
    "access": "public"
  },
  "description": "Bridge the gap between shell commands and .env files",
  "keywords": [
    "dotenv",
    "cli",
    "library",
    "shell",
    "script",
    "bash",
    "sh"
  ],
  "version": "1.0.0",
  "author": "Toilal",
  "license": "MIT",
  "type": "module",
  "bin": "./dist/esm/cli.js",
  "main": "dist/esm/index.js",
  "files": [
    "dist/*",
    "lib/*",
    "LICENSE",
    "CHANGELOG.md",
    "README.md"
  ],
  "scripts": {
    "clean": "rimraf .dist dist",
    "dotx": "NODE_OPTIONS='--no-warnings --experimental-vm-modules --enable-source-maps' node --loader ts-node/esm ./lib/cli.ts",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "build": "yarn clean && tsc -p tsconfig.build.json && chmod +x ./dist/cli.js",
    "test": "NODE_OPTIONS='--no-warnings --experimental-vm-modules --enable-source-maps' jest",
    "start": "node ./dist/cli.js",
    "semantic-release": "NODE_OPTIONS='--no-warnings --experimental-vm-modules --enable-source-maps' semantic-release"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "dotenv-expand": "^8.0.1",
    "execa": "^6.1.0",
    "ts-pattern": "^3.3.5",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "@jest/globals": "^27.5.1",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.2",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@types/cross-spawn": "^6.0.2",
    "@types/jest": "^27.4.1",
    "@types/node": "16.11.26",
    "@typescript-eslint/eslint-plugin": "5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "conventional-changelog-conventionalcommits": "^4.6.3",
    "eslint": "8.10.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-unicorn": "^41.0.0",
    "jest": "^27.5.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.6.0",
    "typescript": "^4.6.2"
  },
  "engines": {
    "node": ">=12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Toilal/dotx.git"
  },
  "resolutions": {
    "chalk": "<5"
  }
}
